{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json"
  ],
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_URL",
    "JWT_SECRET",
    "PORT"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_URL",
        "JWT_SECRET"
      ],
      "outputs": [
        "dist/**",
        "apps/user-app/.next/**",
        "!.next/cache/**",
        "packages/db/node_modules/.prisma/**"
      ]
    },
    "db:generate": {
      "outputs": [
        "packages/db/node_modules/.prisma/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
